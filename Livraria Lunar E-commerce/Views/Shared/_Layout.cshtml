<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Livraria Lunar</title>

    <link href="~/Content/scss/styles.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800;900&display=swap"
          rel="stylesheet">
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-primary fixed-top ">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img src="~/Content/assets/images/Logosemcor.png" alt="Logo" class="img-fluid" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse menu justify-content-end align-items-center p-0" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <form class="d-flex search-bar">
                            <input class="form-control  search" type="" placeholder="Pesquise o produto">
                            <button class="btn-search" type="submit"><i class="bi bi-search"></i></button>
                        </form>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Crie sua conta <i class="bi bi-person-plus"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Entre <i class="bi bi-box-arrow-in-right"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Carrinho <i class="bi bi-cart2"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    @RenderBody()


    <script src="~/Content/assets/js/bootstrap.bundle.min.js"></script>
</body>
</html>